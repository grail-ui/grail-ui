{
	"name": "grail-ui",
	"description": "A library of accessible component primitives, actions and utilities for Svelte",
	"version": "0.0.0",
	"private": true,
	"author": "Tasos Bekos <tbekos@gmail.com>",
	"license": "MIT",
	"keywords": [
		"Accessibility",
		"Components",
		"Library",
		"Open source",
		"Svelte",
		"Sveltekit",
		"Typescript",
		"UI",
		"Web"
	],
	"type": "module",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"format": "prettier --plugin-search-dir=. --cache --write .",
		"format:check": "prettier --plugin-search-dir=. --cache --check .",
		"test": "pnpm --filter=* test",
		"lint": "pnpm --filter=* lint",
		"updates": "pnpx npm-check-updates -i --deep",
		"release": "tsx scripts/release.ts"
	},
	"devDependencies": {
		"@changesets/changelog-github": "0.4.8",
		"@changesets/cli": "2.26.2",
		"@commitlint/cli": "17.6.6",
		"@commitlint/config-conventional": "17.6.6",
		"commitlint-plugin-workspace-scopes": "1.1.0",
		"prettier": "2.8.8",
		"prettier-plugin-svelte": "2.10.1",
		"prettier-plugin-tailwindcss": "0.3.0",
		"syncpack": "10.7.3",
		"tsx": "3.12.7"
	},
	"engines": {
		"node": ">=18",
		"pnpm": ">=8"
	}
}
