{
	"name": "@grail-ui/svelte",
	"version": "0.6.1",
	"keywords": [
		"Accessibility",
		"Components",
		"Library",
		"Open source",
		"Svelte",
		"Sveltekit",
		"Typescript",
		"UI",
		"Web"
	],
	"type": "module",
	"scripts": {
		"build": "svelte-kit sync && svelte-package",
		"prepublishOnly": "echo 'Did you mean to publish `./package/`, instead of `./`?' && exit 1",
		"test": "vitest run --coverage",
		"tdd": "vitest",
		"test-ct": "svelte-kit sync && playwright test -c playwright.config.ts",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint --cache .",
		"api": "svelte-kit sync && typedoc --options ./typedoc.json"
	},
	"devDependencies": {
		"@floating-ui/dom": "1.2.0",
		"@playwright/experimental-ct-svelte": "1.30.0",
		"@playwright/test": "1.30.0",
		"@sveltejs/kit": "1.5.0",
		"@sveltejs/package": "1.0.2",
		"@testing-library/dom": "8.20.0",
		"@testing-library/jest-dom": "5.16.5",
		"@testing-library/svelte": "3.2.2",
		"@testing-library/user-event": "14.4.3",
		"@types/jest-axe": "3.5.5",
		"@types/testing-library__jest-dom": "5.14.5",
		"@typescript-eslint/eslint-plugin": "5.51.0",
		"@typescript-eslint/parser": "5.51.0",
		"@vitest/coverage-c8": "0.28.4",
		"c8": "7.12.0",
		"eslint": "8.33.0",
		"eslint-plugin-svelte3": "4.0.0",
		"focus-trap": "7.2.0",
		"jest-axe": "7.0.0",
		"jsdom": "21.1.0",
		"micromatch": "4.0.5",
		"svelte": "3.55.1",
		"svelte-check": "3.0.3",
		"tslib": "2.5.0",
		"typedoc": "0.23.24",
		"typescript": "4.9.5",
		"vite": "4.1.1",
		"vitest": "0.28.4"
	},
	"peerDependencies": {
		"@floating-ui/dom": "1.x",
		"focus-trap": "7.x",
		"svelte": "3.x"
	},
	"dependencies": {
		"@floating-ui/dom": "^1.0.0",
		"focus-trap": "^7.0.0"
	},
	"publishConfig": {
		"access": "public",
		"directory": "./package"
	},
	"repository": "grail-ui/grail-ui.git"
}
